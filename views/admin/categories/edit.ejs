<%- include('../../partials/navbar.ejs')%>
<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Edit Category</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/categories/update">
                <input type="hidden" name="id" value="<%= category.id%>">
                <input class="form-control" type="input" name="title" placeholder="Edit category" value="<%= category.title%>">
                <br>
                <button class="btn btn-primary">Edit</button>
            </form>
        </div>
    </div>
</div>
